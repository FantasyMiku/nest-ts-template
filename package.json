  "description": "A NestJS+Fastify+TypeScript general template",
  "author": "悠静萝莉 <i@mikuhl.cn>",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
